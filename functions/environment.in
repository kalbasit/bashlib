# devinfo ()#{{{
function devinfo ()
{
    if [ $# -ne 1 ]; then
        echo "usage: devinfo <device>"
        return 1
    fi
    path=$(udevinfo -q path -n $1)
    if [ -n "$path" ]; then
        udevinfo -a -p "$path"
    fi
}
