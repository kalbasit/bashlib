# calc()#{{{
function calc()
{
    echo "scale=3;$*" | bc
}
#}}}
# rot13 ()#{{{
function rot13()
{
    echo "$@" | tr a-zA-Z n-za-mN-ZA-M
}
#}}}
# hex2dec()#{{{
function hex2dec()
{
    awk 'BEGIN { printf "%d\n",0x$1}'
}
#}}}
# dec2hex()#{{{
function dec2hex()
{
    awk 'BEGIN { printf "%x\n",$1}'
}
