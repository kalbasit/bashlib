# mkmine()#{{{
function mkmine()
{
    sudo chown -R ${USER}:${USER} "${1:-.}"
}
#}}}
# pad()#{{{
function pad()
{
    len=${#1}
    echo -n $1
    for i in `seq $len $2`; do
        echo -n " "
    done
}
